void imprime_q(int questao){

//vamos puxar cada questão daqui, se necessario, criar mais uma funcao void

//usar uma variavel iteradora para chamar a pergunta em sequencia
//preferivel usar switch case

//armazenar todas as questoes aqui

    switch (questao){

        case 1:
            pergunta_portugues();
            break;

        case 2:
            pergunta_ciencia();
            break;

        case 3:
            pergunta_historia();
            break;

        case 4:
            pergunta_matematica();
            break;

        case 5:
            pergunta_geografia();
            break;

        default:
            break;
    }
}

int verifica_acerto(int questao, int resposta){

    switch(questao){

        case 1:
            if(resposta == 2){
                return 1;
            }
            else{
                return 0;
            }
            break;

        case 2:
            if(resposta == 1){
                return 1;
            }
            else{
                return 0;
            }
            break;

         case 3:
            if(resposta == 4){
                return 1;
            }
            else{
                return 0;
            }
            break;

         case 4:
            if(resposta == 3){
                return 1;
            }
            else{
                return 0;
            }
            break;

        case 5:
            if(resposta == 4){
                return 1;
            }
            else{
                return 0;
            }
            break;

        default:
            break;
    }
}

void imprime_placar(int jogadores, int vetor_placar[TAM]){

    int i;

    for(i = 0; i < jogadores; i++){
        printf("Jogador %d: %d pontos\n", 1+i, vetor_placar[i]);
    }
}

int main(){

    int vetor_placar[TAM];
    int questao, resposta, jogadores, opcao, jogo = 1, j = 0;

    imprime_menu();
    scanf("%d", &opcao);

    switch(opcao){

        case 1:

            do{
                printf("Digite a quantidade de jogadores: ");
                scanf("%d", &jogadores);
            }while(jogadores <= 0 || jogadores > 10);

            system("cls");

            do{

                acerto = 0;
                erro = 0;

                for(questao = 1; questao <= 5; questao++){

                    printf("\nJogador %d\n", jogo);

                    imprime_q(questao);
                    scanf("%d", &resposta);

                    if(verifica_acerto(questao, resposta) == 1){
                        voce_acertou();
                        acerto++;
                    }
                    else{
                       voce_errou();
                        erro++;
                    }

                    if(acerto == 5){
                        rainha_jovita();
                    }
                    else if(erro == 5){
                        jovita_naorainha();
                    }

                    system("pause");
                    system("cls");
                }



                vetor_placar[j] = acerto;
                j++;

                jogo++;


            }while(jogo <= jogadores);

            imprime_placar(jogadores, vetor_placar);

            break;

    case 2:
        break;

    default:
        printf("Comando Invalido\n");
    }

    return 0;
}
